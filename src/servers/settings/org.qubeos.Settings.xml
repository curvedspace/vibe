<!DOCTYPE node PUBLIC "-//freedesktop//DTD D-BUS Object Introspection 1.0//EN"
    "http://www.freedesktop.org/standards/dbus/1.0/introspect.dtd">
<node name="/org/qubeos/settings_server">
    <interface name="org.qubeos.Settings">
        <method name="plainFont">
            <arg name="font" type="s" direction="out" />
        </method>
        <method name="setPlainFont">
            <arg name="font" type="s" direction="in" />
        </method>
        <signal name="plainFontChanged">
            <arg name="font" type="s" direction="out" />
        </signal>

        <method name="fixedSizeFont">
            <arg name="font" type="s" direction="out" />
        </method>
        <method name="setFixedSizeFont">
            <arg name="font" type="s" direction="in" />
        </method>
        <signal name="fixedSizeFontChanged">
            <arg name="font" type="s" direction="out" />
        </signal>

        <method name="style">
            <arg name="style" type="s" direction="out" />
        </method>
        <method name="setStyle">
            <arg name="style" type="s" direction="in" />
        </method>
        <signal name="styleChanged">
            <arg name="style" type="s" direction="out" />
        </signal>

        <method name="iconTheme">
            <arg name="iconTheme" type="s" direction="out" />
        </method>
        <method name="setIconTheme">
            <arg name="iconTheme" type="s" direction="in" />
        </method>
        <signal name="iconThemeChanged">
            <arg name="iconTheme" type="s" direction="out" />
        </signal>

        <method name="colorScheme">
            <arg name="colorScheme" type="s" direction="out" />
        </method>
        <method name="setColorScheme">
            <arg name="colorScheme" type="s" direction="in" />
        </method>
        <signal name="colorSchemeChanged">
            <arg name="colorScheme" type="s" direction="out" />
        </signal>

        <method name="toolBarIconSize">
            <arg name="size" type="i" direction="out" />
        </method>
        <method name="setToolBarIconSize">
            <arg name="size" type="i" direction="in" />
        </method>
        <signal name="toolBarIconSizeChanged">
            <arg name="size" type="i" direction="out" />
        </signal>

        <method name="toolButtonStyle">
            <arg name="style" type="i" direction="out" />
        </method>
        <method name="setToolButtonStyle">
            <arg name="style" type="i" direction="in" />
        </method>
        <signal name="toolButtonStyleChanged">
            <arg name="style" type="i" direction="out" />
        </signal>
    </interface>
</node>
