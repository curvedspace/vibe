<?xml version="1.0" encoding="UTF-8"?>
<settings xmlns="http://www.maui-project.org/standards/settings/1.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://www.maui-project.org/standards/settings/1.0
                              http://www.maui-project.org/standards/settings/1.0/settings.xsd">
  <schema name="org.hawaii.desktop"/>
  <group name="background">
    <key name="type" type="Enum">
      <summary>Background Type</summary>
      <description>Determines the background type. Possible values are "color", "wallpaper".</description>
      <default>color</default>
      <choices name="BackgroundType">
          <choice name="color"/>
          <choice name="wallpaper"/>
      </choices>
    </key>
    <key name="primary-color" type="Color">
      <summary>Primary Color</summary>
      <description>Left or Top color when draring gradients, or the solid color.</description>
      <default>#336699</default>
    </key>
    <key name="secondary-color" type="Color">
      <summary>Secondary Color</summary>
      <description>Right or Bottom color when draring gradients, not used for solid color.</description>
      <default>#2e5d8c</default>
    </key>
    <key name="color-shading-type" type="Enum">
      <summary>Color Shading Type</summary>
      <description>How to shade the background color. Possible values are "solid", "horizontal" or "vertical".</description>
      <default>solid</default>
      <choices name="BackgroundShading">
          <choice name="solid"/>
          <choice name="horizontal"/>
          <choice name="vertical"/>
      </choices>
    </key>
    <key name="wallpaper-uri" type="Url">
      <summary>Picture URI</summary>
      <description>URI to use for the background wallpaper.</description>
      <default>file://@CMAKE_INSTALL_FULL_DATADIR@/wallpapers/Nature/Evening/contents/images/1920x1200.jpg</default>
    </key>
  </group>
  <group name="interface">
    <key name="enable-animations" type="Bool">
      <summary>Enable Animations</summary>
      <description>Whether animations should be displayed. Note: This is a global key, it changes the behaviour of the window manager, the panel etc.</description>
      <default>true</default>
    </key>
    <key name="font-name" type="String">
      <summary>Font</summary>
      <description>Font used to display user interface elements, such as check box labels, menu items, etc.</description>
      <default>Cantarell</default>
    </key>
    <key name="font-size" type="UInt">
      <summary>Font Size</summary>
      <description>Point size of the font used to display user interface elements, such as check box labels, menu items, etc.</description>
      <default>11</default>
    </key>
    <key name="monospace-font-name" type="String">
      <summary>Fixed-width Font</summary>
      <description>Font used to display fixed-width characters, mostly used by terminal windows.</description>
      <default>DejaVu Sans Mono</default>
    </key>
    <key name="monospace-font-size" type="UInt">
      <summary>Fixed-width Font Size</summary>
      <description>Point size of the font used to display fixed-width characters, mostly used by terminal windows.</description>
      <default>11</default>
    </key>
    <key name="decorator" type="String">
      <summary>Window Decorator Style</summary>
      <description>Style used to draw window decorations.</description>
      <default>Vanish</default>
    </key>
    <key name="style" type="String">
      <summary>User Interface Style</summary>
      <description>Style used to draw all user interface elements.</description>
      <default>Plastique</default>
    </key>
    <key name="theme" type="String">
      <summary>User Interface Theme</summary>
      <description>Theme to draw all desktop user interface elements.</description>
      <default>air</default>
    </key>
    <key name="color-scheme" type="String">
      <summary>User Interface Color Scheme</summary>
      <description>Color scheme to be applied to the user interface style. If empty, the default style's palette is used.</description>
      <default>Default</default>
    </key>
    <key name="icon-theme" type="String">
      <summary>Icon Theme</summary>
      <description>Theme used for all the icons.</description>
      <default>Elegant</default>
    </key>
    <key name="small-icon-size" type="UInt">
      <summary>Small Icon Size</summary>
      <description>Size of the small icons.</description>
      <default>22</default>
    </key>
    <key name="large-icon-size" type="UInt">
      <summary>Large Icon Size</summary>
      <description>Size of the large icons.</description>
      <default>48</default>
    </key>
    <key name="toolbar-icon-size" type="UInt">
      <summary>Toolbar Icon Size</summary>
      <description>Size of toolbar icons.</description>
      <default>24</default>
    </key>
    <key name="button-icon-size" type="UInt">
      <summary>Button Icon Size</summary>
      <description>Size of button icons.</description>
      <default>16</default>
    </key>
    <key name="iconview-icon-size" type="UInt">
      <summary>Icon View Icon Size</summary>
      <description>Size of icon view icons.</description>
      <default>48</default>
    </key>
    <key name="cursor-theme" type="String">
      <summary>Cursor Theme</summary>
      <description>Cursor theme name.</description>
      <default>Vanish</default>
    </key>
    <key name="cursor-size" type="UInt">
      <summary>Cursor Size</summary>
      <description>Size of the cursor used as cursor theme.</description>
      <default>24</default>
    </key>
    <key name="toolbutton-style" type="Enum">
      <summary>Toolbar Buttons Style</summary>
      <description>Style of toolbar buttons. Valid values are "icon-only", "text-only", "text-beside-icon" or "text-under-icon".</description>
      <default>icon-only</default>
      <choices name="ToolButtonStyle">
          <choice name="icon-only"/>        <!-- Qt::ToolButtonIconOnly -->
          <choice name="text-only"/>        <!-- Qt::ToolButtonTextOnly -->
          <choice name="text-beside-icon"/> <!-- Qt::ToolButtonTextBesideIcon -->
          <choice name="text-under-icon"/>  <!-- Qt::ToolButtonTextUnderIcon -->
      </choices>
    </key>
  </group>
</settings>
